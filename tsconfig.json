{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "rootDir": "src",
        "lib": [
            "es2016",
            "dom"
        ]
    }
}
